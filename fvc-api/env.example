# --- Back-end (Spring Boot) ---

# Database
POSTGRES_DB=fvc-db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=123

# Spring Datasource
SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/fvc-db
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=123

# Server
SERVER_PORT=8080

# Security / JWT
SPRING_SECURITY_JWT_SECRET=change_me_to_a_long_random_string
SPRING_SECURITY_JWT_EXPIRATION=1800000

# CORS
APP_SECURITY_CORS_ALLOWED_ORIGINS=http://localhost:5173
APP_SECURITY_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
